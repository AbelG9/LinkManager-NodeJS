{{!-- Vista de listado de enlaces guardados  --}}
<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center card-aquastyle">
                    <div class="card-body">
                        <a href="{{url}}">
                            <h3 class="card-title text-uppercase aquatext">
                                {{title}}
                            </h3>
                        </a>
                        <p>{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <div class="row">
                            <div class="col">
                                <a href="/links/edit/{{id}}" 
                                    class="btn btn-secondary btn-block">
                                    Editar
                                </a>
                            </div>
                            <div class="col">
                                <a href="/links/delete/{{id}}" 
                                    class="btn btn-info btn-block">
                                    Borrar
                                </a>
                            </div>
                        </div>                      
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center card-aquastyle">
                    <h3 class="aquatext">
                        No tienes enlaces guardados
                    </h3>
                    <a href="/links/add" class="btn btn-success">
                        Guardar nuevo enlace
                    </a>
                </div>
            </div>
        {{/each}}
    </div>
</div>