<div class="container-flex p-4">
    <div class="row justify-content-md-center">
        <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="card text-center card-aquastyle">
                <div class="card-header text-uppercase">
                    <h3>Inserte sus enlaces</h3>
                </div>
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <label htmlFor="txttitle">Título de la Página:</label>
                            <input type="text" class="form-control" id="txttitle" name="title" placeholder="Título" autofocus>
                        </div>
                        <div class="form-group">
                            <label htmlFor="txturl">Dirección de la Página:</label>
                            <input type="url" id="txturl" name="url" class="form-control" placeholder="Dirección">
                        </div>
                        <div class="form-group">
                            <label htmlFor="txtdescripcion">Descripción de la Página:</label>
                            <textarea name="description" id="txtdescripcion" rows="4" class="form-control" placeholder="Descripción"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>